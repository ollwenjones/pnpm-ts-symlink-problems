// uses a separate config for build vs edit, to avoid nesting of /generated and copying that around.
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../server-api",
    "paths": {
      "@sj-test/server-api/*": ["generated/*"]
    }
  },
  "include": ["./generated/**/*.ts"]
}
